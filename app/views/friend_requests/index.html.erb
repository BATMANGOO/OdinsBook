<h1 class='pending-title'>Pending Requests</h1>
<div class='requests-container'>
  <% @incoming.each do |f| %>
  <div class='pending-user'>
    <div class='pending-avatar pending-layer'>
      <%= image_tag User.find(f.user_id).avatar_thumbnail, class: 'avatar friend_avatar' %>
    </div>
    <div class='pending-name pending-layer'>
      <%= link_to User.find(f.user_id).name, user_path(f.user_id) %>
    </div>
    <div class='pending-choices pending-layer'>
      <%= link_to "Accept", accept_friend_request_path(f.user_id), method: :post, class: 'button is-primary' %>
      <%= link_to "Reject", reject_friend_request_path(f.user_id), method: :post, class: 'button is-danger'  %>
    </div>
  </div>
  <% end %>
</div>