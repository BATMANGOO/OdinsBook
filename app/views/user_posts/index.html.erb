<div class="container">
  <div class="column side-bar left-column">
    <div class='avatar'>
      <%= image_tag current_user.avatar_thumbnail, class: 'avatar user_avatar' %>
    </div>
    <p>dummy link</p>
    <p>dummy link</p>
    <p>dummy link</p>
    <p>dummy link</p>
  </div>
  <div class="column message-feed center-column">
    <div class="message">
      <%= render 'form', user_post: @user_post %>
    </div>
    <div class="feed">
      <%= render 'feed', user_post: @user_post %>
    </div>
  </div>
  <div class="column right-bar right-column">
    <p>Friend Suggestions</p>
    <%# look at other persons github on how to cleanly do this. %>
      <% User.where.not(id: [current_user.friends.ids, current_user.id, current_user.friend_requests.each {|friend| friend.friend_id }]).order("Random()").limit(3).each do |user|  %>
        <div class="friend-choices">
          <div class='avatar-name'>
            <span class='friend-sug friend-avatar'><%= image_tag user.avatar_thumbnail, class: 'avatar friend_avatar' %></span>
            <span class='friend-sug friend-name'><%= link_to user.name, user_path(user) %></span>
          </div>
          <div class='add-button'>
            <span class='friend-sug friend-add'><%= link_to '+', friend_requests_path(friend_id: user.id), method: :post %> </span>
          </div>
        </div>
      <% end %>
  </div>
</div>